{
  "buildCommand": "npm run build:spa",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/(ads.txt|sitemap.xml|robots.txt|manifest.json|browserconfig.xml|security-test.html)",
      "destination": "/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/generate.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
